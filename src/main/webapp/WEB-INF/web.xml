<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
  <display-name>Web Application</display-name>
  <servlet>
    <servlet-name>calculation</servlet-name>
    <servlet-class>com.codewithme.servlets.Calculations</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>add</servlet-name>
    <servlet-class>com.codewithme.servlets.Sum</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>subtract</servlet-name>
    <servlet-class>com.codewithme.servlets.Subtraction</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>calculation</servlet-name>
    <url-pattern>/calculation</url-pattern>
  </servlet-mapping><servlet-mapping>
    <servlet-name>add</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>subtract</servlet-name>
    <url-pattern>/subtract</url-pattern>
  </servlet-mapping>
</web-app>
